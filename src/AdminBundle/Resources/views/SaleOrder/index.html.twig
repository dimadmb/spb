{% extends '::baseadmin.html.twig' %}

{% block body %}

<br>	
<br>	
<br>	
<br>	
<br>	
<br>	
<br>

{{dump()}}	


<table class="table">
		<tr>
			<th>Номер заказа</th>
			<th>Покупатель</th>
			<th>Дата заказа</th>
			<th>На сумму</th>
			<th>Оплачено</th>
			<th></th>
		</tr>
	{% for order in orders %}
		<tr>
			<td>
			<b>{{order.id}}</b>
			{% for  cruise in order.cruises %}
			<br>
			{{cruise.time | localizeddate('full', 'none', null, null, 'HH : mm') }}	
			&nbsp;&nbsp;&nbsp;

			{{cruise.date | localizeddate('full', 'none', null, null, 'dd MMM Y (eee)') }}&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
			{{cruise.direction.name}}
			 
			
			{% endfor %}
			</td>
			<td>
			{{order.name}}<br>
			{{order.phone}}<br>
			{{order.email}}
			</td>
			<td>{{order.date | localizeddate('full', 'none', null, null, 'dd MMM Y HH : mm')}}</td>
			<td>
			{% set summa = 0 %}
			{% for orderCruise in order.orderCruise %}
				{% set summa = summa + orderCruise.count * orderCruise.price %}
			{% endfor %}
			{{summa}}
			</td>
			<td>{{order.trxAmount}}</td>
			<td><a href="{{path('admin_sale_order_item',{'id':order.id})}}" class="btn btn-success">Детали</a></td>
		</tr>
	{% endfor %}
	
</table>


{% endblock %}